<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>WechatPayServlet</servlet-name>
    <servlet-class>cn.syc.wechat.App.WechatPayServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WechatPayServlet</servlet-name>
    <url-pattern>/pay</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>WechatNotificateServlet</servlet-name>
    <servlet-class>cn.syc.wechat.App.WechatNotificateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WechatNotificateServlet</servlet-name>
    <url-pattern>/notificate</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>WechatQueryServlet</servlet-name>
    <servlet-class>cn.syc.wechat.App.WechatQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WechatQueryServlet</servlet-name>
    <url-pattern>/query</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>WechatRefundServlet</servlet-name>
    <servlet-class>cn.syc.wechat.App.WechatRefundServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WechatRefundServlet</servlet-name>
    <url-pattern>/refund</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>WechatRefundNotificateServlet</servlet-name>
    <servlet-class>cn.syc.wechat.App.WechatRefundNotificateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WechatRefundNotificateServlet</servlet-name>
    <url-pattern>/refundNotificate</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>WechatRefundQueryServlet</servlet-name>
    <servlet-class>cn.syc.wechat.App.WechatRefundQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WechatRefundQueryServlet</servlet-name>
    <url-pattern>/refundQuery</url-pattern>
  </servlet-mapping>
</web-app>
